<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".shareactivity">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="410dp"
        android:layout_height="134dp"
        android:background="@drawable/sharepage"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="215dp"
            android:layout_height="45dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Share Your Stuffs"
            android:textColor="@color/lightgray"
            android:textSize="25sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="377dp"
        android:layout_height="626dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout8"
        app:layout_constraintVertical_bias="0.96">

        <androidx.cardview.widget.CardView
            android:layout_width="361dp"
            android:layout_height="609dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="152dp"
                android:layout_height="43dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="40sp"
                android:fontFamily="sans-serif"
                android:text="Title"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="308dp"
                android:layout_height="63dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="70sp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="150dp"
                android:text="Description"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/editText16"
                android:layout_width="322dp"
                android:layout_height="113dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:background="#F1F1F1"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="write something.."
                android:textAlignment="viewStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="330dp"
                android:text="Attachments"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/editText17"
                android:layout_width="318dp"
                android:layout_height="38dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="370dp"
                android:background="#ECE8EC"
                android:ems="10"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="47dp"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="420dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/attach" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="51dp"
                android:layout_height="37dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="420dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/addbtn" />

            <Button
                android:id="@+id/button13"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="480dp"
                android:background="#304FFE"
                android:text="@string/shareact" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="356dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sharedescription"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />

</androidx.constraintlayout.widget.ConstraintLayout>


